<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.views.DashboardFragment">

    <ImageView
        android:id="@+id/title"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/perfilTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Perfil"
        android:background="@color/yellow"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfilImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blue"
        android:src="@drawable/image_perfil"
        app:layout_constraintTop_toBottomOf="@id/perfilTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ajustes"
        android:background="@color/yellow"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/perfilImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>