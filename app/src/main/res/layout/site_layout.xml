<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/siteName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Nombre del lugar"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/siteName"
        app:layout_constraintEnd_toEndOf="@+id/siteName"
        app:layout_constraintTop_toBottomOf="@+id/siteName"
        android:src="@drawable/image_perfil"
        android:layout_width="65dp"
        android:layout_marginTop="5dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/siteDescription"
        app:layout_constraintStart_toEndOf="@id/siteName"
        app:layout_constraintTop_toTopOf="@+id/siteName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@color/fondo"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:text="Esto es un breve resumen del lugar, tiene que ser algo conciso y el maximo de palabras no lo se aÃºn."
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/viewSite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Detalles"
        android:layout_margin="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:textColor="@color/black"
        android:background="@color/yellow"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>